#ifndef INCLUDE_CHTTP_H_IN_
#define INCLUDE_CHTTP_H_IN_


/* standard */
#include <stdint.h>
#include <stdarg.h>
#include <stdlib.h>

/* system */
#include <sys/types.h>


#cmakedefine CONFIG_CHTTP_REQUEST_HEADERSMAX @CONFIG_CHTTP_REQUEST_HEADERSMAX@
#cmakedefine CONFIG_CHTTP_RESPONSE_HEADERSMAX \
    @CONFIG_CHTTP_RESPONSE_HEADERSMAX@
#cmakedefine CONFIG_SYSTEM_PAGESIZE @CONFIG_SYSTEM_PAGESIZE@


/* statuses */
typedef int chttp_status_t;
enum chttp_status {
    CHTTP_STATUS_200_OK = 200,
    CHTTP_STATUS_400_BADREQUEST = 400,
    CHTTP_STATUS_404_NOTFOUND = 404,
    CHTTP_STATUS_414_URITOOLONG = 414,
    CHTTP_STATUS_431_REQUESTHEADERFIELDSTOOLARGE = 431,
    CHTTP_STATUS_500_INTERNALSERVERERROR = 500,
};


/* store */
#define store_avail(s) ((s).size - (s).len)
struct chttp_store {
    char *backend;
    size_t size;
    size_t len;
};


struct chttp_responsemaker {
    const char *header;
    unsigned int headerlen;

    char *content;
    size_t contentmax;
    size_t contentlength;
};


struct chttp_request {
    const char *verb;
    const char *path;
    const char *query;
    const char *protocol;
    const char *contenttype;
    const char *charset;
    const char *expect;
    const char *useragent;
    ssize_t contentlength;

    unsigned short headerscount;
    const char *headers[CONFIG_CHTTP_REQUEST_HEADERSMAX];

    struct chttp_responsemaker response;
    struct chttp_store store;
    char storebuff[];
};


struct chttp_response {
    chttp_status_t status;
    const char *text;
    const char *protocol;
    const char *contenttype;
    const char *charset;
    ssize_t contentlength;

    unsigned short headerscount;
    const char *headers[CONFIG_CHTTP_REQUEST_HEADERSMAX];

    struct chttp_store store;
    char storebuff[];
};


const char *
chttp_status_text(chttp_status_t status);


struct chttp_request *
chttp_request_new(uint8_t pages);


int
chttp_request_free(struct chttp_request *r);


chttp_status_t
chttp_request_parse(struct chttp_request *r, char *header, size_t size);


int
chttp_responsemaker_start(struct chttp_request *r, chttp_status_t status,
        const char *text);


int
chttp_responsemaker_vheader(struct chttp_request *r, const char *fmt,
        va_list args);


int
chttp_responsemaker_header(struct chttp_request *r, const char *fmt, ...);


int
chttp_responsemaker_header_close(struct chttp_request *r);


int
chttp_responsemaker_contenttype(struct chttp_request *r, const char *type,
        const char *charset);


int
chttp_responsemaker_content_allocate(struct chttp_request *r, size_t size);


ssize_t
chttp_responsemaker_content_write(struct chttp_request *r, const char *fmt,
        ...);


struct chttp_response *
chttp_response_new(uint8_t pages);


chttp_status_t
chttp_response_parse(struct chttp_response *r, char *header, size_t size);


int
chttp_response_free(struct chttp_response *r);


#endif  // INCLUDE_CHTTP_H_IN_
